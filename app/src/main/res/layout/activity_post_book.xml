<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/post_book_layout"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".PostBookActivity">

    <EditText
        android:id="@+id/title_text"
        android:hint="title"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/author_text"
        android:hint="author"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/publication_text"
        android:hint="publication"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edition_text"
        android:hint="edition"
        android:inputType="number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/price_text"
        android:hint="Expected Price"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/book_img1"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_width="123dp"
            android:layout_height="163dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/add_book"
        android:text="ADD FOR SALE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>