<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutcolor">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/header"
    android:background="@color/backroundcolor">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/person"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/plus"
        android:layout_marginVertical="80dp"
        android:layout_marginHorizontal="220dp"
        />

</RelativeLayout>



        <ImageView
            android:id="@+id/nameicon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:paddingStart="3dp"
            android:paddingEnd="5dp"
            android:layout_below="@id/header"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_person" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editwithoutcolor"
            android:hint="full name"
            android:layout_toEndOf="@id/nameicon"
            android:layout_below="@id/header"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text"/>

       <ImageView
           android:id="@+id/emailicon"
           android:layout_width="30dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/nameicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_email_black_24dp"
           />

       <EditText
           android:id="@+id/email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="E-mail"
           android:layout_toEndOf="@id/emailicon"
           android:layout_below="@id/name"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="textEmailAddress"/>

       <ImageView
           android:id="@+id/passicon"
           android:layout_width="30dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/emailicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_fill_lock" />

       <EditText
           android:id="@+id/pass"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Password"
           android:layout_toEndOf="@id/passicon"
           android:layout_below="@id/email"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="textPassword"
           android:drawableRight="@drawable/eye"/>


       <ImageView
           android:id="@+id/phoneicon"
           android:layout_width="30dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/passicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_phone_black_24dp" />

       <EditText
           android:id="@+id/phone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Phone number"
           android:layout_toEndOf="@id/phoneicon"
           android:layout_below="@id/pass"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="phone"/>

       <ImageView
           android:id="@+id/addressicon"
           android:layout_width="30dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/phoneicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_location_on_black_24dp" />

       <EditText
           android:id="@+id/address"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Address"
           android:layout_toEndOf="@id/addressicon"
           android:layout_below="@id/phone"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="text"/>

       <ImageView
           android:id="@+id/semicon"
           android:layout_width="30dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/addressicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_study" />

       <EditText
           android:id="@+id/sem"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Semester"
           android:layout_toEndOf="@id/semicon"
           android:layout_below="@id/address"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="number"/>

       <ImageView
           android:id="@+id/branchicon"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/semicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_books_stack_of_three" />

       <EditText
           android:id="@+id/branch"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Branch"
           android:layout_toEndOf="@id/branchicon"
           android:layout_below="@id/sem"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="text"/>

       <ImageView
           android:id="@+id/enoicon"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/branchicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_view_list_black_24dp" />

       <EditText
           android:id="@+id/eno"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="Enrollment no"
           android:layout_toEndOf="@id/enoicon"
           android:layout_below="@id/branch"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="number"/>

       <ImageView
           android:id="@+id/collegeicon"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:paddingStart="3dp"
           android:paddingEnd="5dp"
           android:layout_below="@id/enoicon"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_company"/>

       <EditText
           android:id="@+id/college"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/editwithoutcolor"
           android:hint="college name"
           android:layout_toEndOf="@id/enoicon"
           android:layout_below="@id/eno"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:inputType="text"/>

       <Button
           android:id="@+id/signin"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="Sign in"
           android:textColor="#ffff"
           android:background="@drawable/rounded_button"
           android:layout_below="@id/college"
           android:layout_marginEnd="20dp"
           android:padding="10dp"
           android:layout_marginTop="30dp">

       </Button>




   </RelativeLayout>


</ScrollView>